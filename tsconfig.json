{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": [
    "lib/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/*-test.ts"
  ]
}
